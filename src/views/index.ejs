<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div> 
			<% visited.forEach(visitado =>{ %>
			<div class="col-12 col-sm-6 col-lg-3">
				
				<section class="product-box">
					<a href="/products/detail/<%= visitado.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%=visitado.image%> " alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2><%=toThousand(visitado.price)%></h2>
							<span><%=visitado.discount%></span>
							<p><%=visitado.name%></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %>
		</div>
	</div>
	
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% inSale.forEach(enVenta =>{ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%=enVenta.id%>">
						<figure class="product-box_image">
							<img src="/images/products/<%=enVenta.image%>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2><%=toThousand(enVenta.price)%></h2>
							<span><%=enVenta.discount%></span>
							<p><%=enVenta.name%></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %> 
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>